<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Bath3Activity" android:background="#93A6B1">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent" app:srcCompat="@drawable/harrypotter" android:id="@+id/img_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:scaleType="fitXY"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            tools:listitem="@layout/people_view"
            android:layout_height="300dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/rv_bath"
            app:layout_constraintBottom_toBottomOf="@+id/img_background"/>
    <ImageView
            android:layout_width="80dp"
            android:layout_height="wrap_content" app:srcCompat="@drawable/dobby"
            android:id="@+id/btn_dobby"
            android:layout_marginTop="220dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="100dp"
            android:layout_marginRight="100dp"/>
    <Button
            android:text="   離開浴場   "
            android:layout_width="128dp"

            android:layout_height="48dp"
            android:id="@+id/btn_leave" android:textSize="24sp"
            android:background="#D5A677"
            android:textColor="#DD020000"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="@+id/img_background" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>