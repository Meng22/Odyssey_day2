<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#DADCDB"
        tools:context=".MainActivity" >
    <Button
            android:text="進入浴場"
            android:layout_width="95dp"
            android:background="@drawable/ic_solid_rectangle"
            android:layout_height="33dp"
            android:id="@+id/btn_entry2" android:textSize="10sp"
            android:textColor="#F5F5F5"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="@+id/tv_intro2" android:layout_marginLeft="16dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="@+id/img_bath2"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_intro3"
            app:layout_constraintStart_toStartOf="@+id/tv_name3"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/tv_name3"
    />
    <TextView
            android:text="10/10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_number2" app:layout_constraintStart_toEndOf="@+id/tv_name2"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/tv_name2" android:layout_marginTop="4dp" android:textSize="18sp"/>
    <ImageView
            android:layout_width="180dp"
            android:background="@drawable/ic_hollow_shape"
            android:layout_height="120dp" app:srcCompat="@drawable/bath2"
            android:id="@+id/img_bath2" android:scaleType="fitXY"
            app:layout_constraintTop_toTopOf="@+id/tv_name2"
            app:layout_constraintEnd_toEndOf="@+id/img_bath1"
    />
    <Button
            android:text="進入浴場"
            android:layout_width="95dp"
            android:background="@drawable/ic_solid_rectangle"
            android:layout_height="33dp"
            android:id="@+id/btn_entry1" android:textSize="10sp"
            android:textColor="#F5F5F5" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="@+id/tv_intro1" android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/tv_intro1"
            app:layout_constraintBottom_toBottomOf="@+id/img_bath1" android:layout_marginBottom="8dp"/>
    <TextView
            android:text="BJ4！就是要露仙"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_intro2"
            app:layout_constraintStart_toStartOf="@+id/tv_name2"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/tv_name2"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:background="@drawable/ic_solid_shape"
            android:id="@+id/ed_user" android:hint="請輸入姓名" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="25dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="95dp" android:layout_marginStart="95dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="103dp" android:layout_marginRight="103dp"
            app:layout_constraintHorizontal_bias="1.0"/>
    <TextView
            android:text="載入中..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_name1" android:textSize="24sp"
            android:textColor="#403E4E" android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/ed_user" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="25dp" android:layout_marginStart="25dp"/>
    <ImageView
            android:layout_width="180dp"
            android:background="@drawable/ic_hollow_shape"
            android:layout_height="120dp" app:srcCompat="@drawable/bath1"
            android:id="@+id/img_bath1" android:scaleType="fitXY"
            app:layout_constraintTop_toTopOf="@+id/tv_name1"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_number1" android:textSize="18sp" app:layout_constraintStart_toEndOf="@+id/tv_name1"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/tv_name1" android:layout_marginTop="4dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_intro1" app:layout_constraintStart_toStartOf="@+id/tv_name1"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/tv_name1"/>
    <Button
            android:text="進入浴場"
            android:layout_width="95dp"
            android:background="@drawable/ic_solid_rectangle"
            android:layout_height="33dp"
            android:id="@+id/btn_entry3" android:textSize="10sp"
            android:textColor="#F5F5F5"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="@+id/tv_intro3" android:layout_marginLeft="16dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="@+id/img_bath3"/>
    <TextView
            android:text="露仙浴場"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="#403E4E" android:id="@+id/tv_name2"
            app:layout_constraintStart_toStartOf="@+id/tv_name1"
            app:layout_constraintTop_toBottomOf="@+id/img_bath1" android:layout_marginTop="40dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_number3"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toTopOf="@+id/tv_name3" app:layout_constraintStart_toEndOf="@+id/tv_name3"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:textSize="18sp"/>
    <TextView
            android:text="載入中..."
            android:layout_width="wrap_content"
            android:textSize="24sp"
            android:textColor="#403E4E" android:layout_marginTop="40dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_name3"
            app:layout_constraintTop_toBottomOf="@+id/img_bath2"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"/>
    <ImageView
            android:layout_width="180dp"
            android:background="@drawable/ic_hollow_shape"
            android:layout_height="120dp" app:srcCompat="@drawable/bath3"
            android:id="@+id/img_bath3" android:scaleType="fitXY"
            app:layout_constraintTop_toTopOf="@+id/tv_name3"
            app:layout_constraintEnd_toEndOf="@+id/img_bath2"
    />

</androidx.constraintlayout.widget.ConstraintLayout>